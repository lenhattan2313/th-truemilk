{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@hooks/*": [
        "./src/app/products/hooks/*",
        "./src/app/cart/hooks/*",
        "./src/app/checkout/hooks/*",
        "./src/app/auth/hooks/*",
        "./src/app/profile/hooks/*",
        "./src/hooks/*"
      ],
      "@lib/*": ["./src/lib/*"],
      "@queries/*": ["./src/queries/*"],
      "@shared/*": ["./src/app/shared/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
